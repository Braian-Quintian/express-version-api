{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // ─────────────────────────────────────────────────────────────────
    // Módulos ESM
    // ─────────────────────────────────────────────────────────────────
    "module": "NodeNext",

    // ─────────────────────────────────────────────────────────────────
    // Salida
    // ─────────────────────────────────────────────────────────────────
    "outDir": "dist/esm",
    "declarationDir": "dist/types",

    // ─────────────────────────────────────────────────────────────────
    // Build incremental
    // ─────────────────────────────────────────────────────────────────
    "tsBuildInfoFile": ".cache/tsbuild/esm.tsbuildinfo",
    "composite": true
  },
  "include": ["src/**/*.ts", "test/middleware.test.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/*.spec.ts"]
}
