{
  "compilerOptions": {
    "target": "es6", // ECMAScript version to compile code to
    "module": "commonjs", // Type of module to generate (CommonJS, ESNext, etc.)
    "outDir": "dist", // Output directory for compiled files
    "strict": true, // Enable strict mode
    "esModuleInterop": true, // Enable ES module interoperability
    "skipLibCheck": true, // Skip type checking of declaration files
    "declaration": true, // Generate declaration files (.d.ts)
    "declarationDir": "dist", // Directory for declaration files
    "moduleResolution": "node" // Add this line to support module resolution in CommonJS style
  },
  "include": ["src/**/*.ts"], // File pattern to include in compilation
  "exclude": ["node_modules"] // File pattern to exclude from compilation
}