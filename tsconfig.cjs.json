{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // ─────────────────────────────────────────────────────────────────
    // Módulos CommonJS
    // ─────────────────────────────────────────────────────────────────
    // CommonJS para compatibilidad con `require()`
    "module": "CommonJS",
    // Bundler resolution permite más flexibilidad en CJS
    "moduleResolution": "Bundler",
    // Desactivar para CJS ya que no aplica igual
    "verbatimModuleSyntax": false,

    // ─────────────────────────────────────────────────────────────────
    // Salida
    // ─────────────────────────────────────────────────────────────────
    "outDir": "dist/cjs",
    // Los tipos se generan solo en ESM build
    "declaration": false,
    "declarationMap": false,

    // ─────────────────────────────────────────────────────────────────
    // Build incremental
    // ─────────────────────────────────────────────────────────────────
    "tsBuildInfoFile": ".cache/tsbuild/cjs.tsbuildinfo",
    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/*.spec.ts"]
}
