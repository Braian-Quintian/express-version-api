{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "types": ["jest", "node"],
    "noEmit": true,

    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
